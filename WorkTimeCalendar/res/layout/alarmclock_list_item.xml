<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="20dp" >

    <!-- image -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:paddingLeft="30dp"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <!-- text -->

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- first line -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- title -->

            <TextView
                android:id="@+id/tv_AlarmclockItemLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白班闹钟"
                android:textSize="20sp"/>

            <!-- group -->

            <TextView
                android:id="@+id/tv_AlarmclockItemGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dip"
                android:text="（A组）" />

            <!-- switch -->

            <TextView
                android:id="@+id/tv_AlarmclockItemSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dip"
                android:text="状态：已打开" />
        </LinearLayout>

        <!-- second line -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_AlarmclockItemTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一次响铃时间：" />

            <!-- time -->

            <TextView
                android:id="@+id/tv_AlarmclockItemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 12:00" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>